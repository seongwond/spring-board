<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.mapper.BoardMapper">

    <resultMap id="BoardResultMap" type="com.board.domain.Board">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <select id="findAll" resultMap="BoardResultMap">
        SELECT id, title, content, created_at
        FROM board
        ORDER BY id DESC
    </select>

    <select id="findById" parameterType="long" resultMap="BoardResultMap">
        SELECT id, title, content, created_at
        FROM board
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.board.domain.Board" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO board (title, content, created_at)
        VALUES (#{title}, #{content}, NOW())
    </insert>

    <update id="update" parameterType="com.board.domain.Board">
        UPDATE board
        SET title = #{title}, content = #{content}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM board
        WHERE id = #{id}
    </delete>

</mapper>
