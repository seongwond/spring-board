<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.mapper.MemberMapper">

	<insert id="insertMember" parameterType="com.board.domain.Member">
		INSERT INTO member (email, password, username, updated_at)
		VALUES (#{email}, #{password}, #{username}, #{updatedAt})
	</insert>

	<select id="findByEmail" parameterType="String"
		resultType="com.board.domain.Member">
		SELECT * FROM member WHERE email = #{email}
	</select>

</mapper>
